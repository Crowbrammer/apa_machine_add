
<ScreenManagement>:

	ListTeammatesScreen:
		id: list_teammates_screen
	TeammateModifyScreen:
		id: teammate_modify_screen

# High Level

<TeammateModifyScreen>:

	name: 'TeammateModifyScreen'
	navigation_HUD: navigation_HUD
	teammate_name: teammate_name

	BoxLayout:

		orientation: 'vertical'
		padding: 20, 20

		Label:
			id: teammate_name
			size_hint_y: None
			height: '40dp'
			font_size: '30dp'
			text: app.teammate_name

		# Make the height of the ScrollView the remaining space after the label and
		# the NavigationHUD.


		PrimaryOverlay:
			id: primary_overlay
			#size_hint_y: None
			#height: self.height - root.navigation_HUD.height - root.teammate_name.height

		NavigationHUD:
			id: navigation_HUD

<PrimaryOverlay>:

	TeammateModifyLayout:
		id: teammate_modify_layout

<ListTeammatesScreen>:

	name: 'ListTeammatesScreen'
	ListTeammatesLayout

<ListTeammatesLayout>:

	orientation: 'vertical'
	padding: 20, 20

	Label:
		id: my_teammates
		text: app.teammate_name
		font_size: '30dp'

	Button:
		text: 'ListTeammatesScreen'
		on_release: root.manager.current = 'ListTeammatesScreen'
# Low Level

<TeammateModifyLayout>:

	#Make sure it doesn't resize the elements
	#size_hint_y: None

	#Set the spacing of TeammateModifyLayout to 10.
	spacing: 10

	id: teammate_modify_layout
	teammate_name: 'teammate_name'


	orientation: 'vertical'
	padding: 20

	Label:
		id: teammate_name
		text: 'teammate_name'

	Button:

		on_release: app.root.current = 'PositionerScreen'
		text: 'Position Em!'
		font_size: '30dp'


	# Submit
	Button:

		on_release: root.record_that_shit()
		text: 'Record That Shit!'
		font_size: '30dp'

	Image:

		source: 'data/cat.jpg'

	NavigationHUD

<IsSheTrained>:

	Label:

		id: position_label
		text: '[Position Name]'

	Switch:

		id: position_training_switch

<SwitchScreensButton>:

	# Set the size_hint_y of each lsm to None

	# Set the height of each lsm to '20dp'
	height: '20dp'
	text: 'Hello'

	on_release:
		app.root.current = 'TeammateModifyScreen'
		app.root.ids.teammate_modify_screen.ids.primary_overlay.ids.teammate_modify_layout
		app.teammate_name = self.text

<NavigationHUD>

	size_hint_y: None
	height: '40dp'
	Button:
		id: feedback_button
		text: 'Spch Bubble'

	Button:
		id: home_button
		text: 'Home'
