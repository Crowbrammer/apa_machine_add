

ScreenManagement:

	MachineAddScreen:

<MachineAddScreen>:

	name: 'MachineAddScreen'
	PrimaryOverlay

<PrimaryOverlay>:

	MachineAddLayout

<MachineAddLayout>:

	orientation: 'vertical'
	spacing: 20

	BoxLayout:

		orientation: 'vertical'
		padding: 20, 20
		spacing: 10

		Label:
			id: title_label
			text: 'Machine Add Screen'
			font_size: '30dp'
			# text_size: '15dp'

		TextInput:
			id: machine_add_name
			text: 'Add your machine name here'
			multiline: False

		Button:
			id: status
			text: 'Machine Status'

		Button:
			id: add_machine_confirm
			text: 'Add Model'
			font_size: '30dp'
			on_release: root.record_new_model()

	NavigationHUD

<NavigationHUD>

	size_hint_y: None
	height: '40dp'
	Button:
		id: feedback_button
		text: 'Spch Bubble'

	Button:
		id: home_button
		text: 'Home'
